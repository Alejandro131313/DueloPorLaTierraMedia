<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controladores.ConfigurarPartidaController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <Label text="Configurar Partida" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <HBox spacing="10" alignment="CENTER">
        <Label text="Jugador Comunidad:" />
        <TextField fx:id="nombreComunidad" promptText="Introduce el nombre del jugador Comunidad" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Jugador Mordor:" />
        <TextField fx:id="nombreMordor" promptText="Introduce el nombre del jugador Mordor" />
    </HBox>

    <Button text="Comenzar Partida" onAction="#onComenzarPartida" />
</VBox>
