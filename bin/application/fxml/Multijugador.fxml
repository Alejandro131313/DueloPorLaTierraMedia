<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="application.MultijugadorController"
           prefHeight="467.0" prefWidth="353.0">

    <!-- Imagen de fondo ajustada al tamaño -->
    <ImageView fitHeight="467.0" fitWidth="353.0" preserveRatio="false" pickOnBounds="true">
        <image>
            <Image url="/Images/imagen2.jpeg" />
        </image>
    </ImageView>

    <!-- Contenedor de botones -->
    <VBox alignment="CENTER" spacing="15.0">
        <Button text="Host" onAction="#onHost" />
        <Button text="Unirse a Partida" onAction="#onUnirse" />
        <Button text="Estadísticas" onAction="#onEstadisticas" />
        <Button text="Volver al Menú" onAction="#onVolver" />
    </VBox>
</StackPane>
