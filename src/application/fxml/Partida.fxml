<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controladores.TableroController">

    <!-- Zona del Jugador 1 -->
    <left>
        <VBox fx:id="zonaJugador1" spacing="10" alignment="CENTER" style="-fx-padding: 10;">
            <Label text="Jugador Comunidad" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <Label fx:id="nombreJugadorComunidad" text="Nombre Comunidad" style="-fx-font-size: 14px;" />
            <ListView fx:id="cartasJugador1" />
        </VBox>
    </left>

    <!-- Zona del Jugador 2 -->
    <right>
        <VBox fx:id="zonaJugador2" spacing="10" alignment="CENTER" style="-fx-padding: 10;">
            <Label text="Jugador Mordor" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <Label fx:id="nombreJugadorMordor" text="Nombre Mordor" style="-fx-font-size: 14px;" />
            <ListView fx:id="cartasJugador2" />
        </VBox>
    </right>

    <!-- Tablero Central -->
    <center>
        <GridPane fx:id="tableroCentral" alignment="CENTER" hgap="10" vgap="10" style="-fx-padding: 10;">
            <!-- Las cartas de la pirámide serán añadidas desde el controlador -->
        </GridPane>
    </center>
</BorderPane>
